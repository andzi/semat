<script>
    $(document).ready(function () {
        $('.checklist_checkbox').click(function(){
            if($(this).is(':checked')){
                checked = true;
            } else {
                checked = false;
            }
            id = $(this).val()
            $.ajax({
                type:'post',
                data:"checklist_id=" + id + "&checked=" + checked +  "&team_id=<%=@team.id%>&user_id=<%=current_user.id%>",
                dataType:'script',
                url:'/api/v1/progress'});
        });

    });
</script>

<% @version.alphas.each do |alpha| %>
    <h2><%= alpha.name %></h2>

<div class="row">
  <% alpha.states.each do |state| %>
        <div class="col-md-4"><%= render :partial => "state_card", :locals => {:state => state, :color => alpha.color} %></div>
  <% end %>
</div>
<% end %>

